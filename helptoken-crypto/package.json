
{
    "name": "helptoken-municipal-crypto",
    "version": "1.0.0",
    "description": "Municipal volunteer cryptocurrency system with blockchain integration",
    "main": "index.js",
    "scripts": {
      "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
      "dev:frontend": "cd frontend && npm run dev",
      "dev:backend": "cd backend && npm run dev",
      "build": "npm run build:contracts && npm run build:frontend && npm run build:backend",
      "build:contracts": "cd contracts && npm run compile",
      "build:frontend": "cd frontend && npm run build",
      "build:backend": "cd backend && npm run build",
      "test": "npm run test:contracts && npm run test:frontend && npm run test:backend",
      "test:contracts": "cd contracts && npm run test",
      "test:frontend": "cd frontend && npm run test",
      "test:backend": "cd backend && npm run test",
      "deploy:testnet": "cd contracts && npm run deploy:mumbai",
      "deploy:mainnet": "cd contracts && npm run deploy:polygon",
      "setup": "npm run setup:install && npm run setup:env",
      "setup:install": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../contracts && npm install",
      "setup:env": "cp .env.example .env && cd frontend && cp .env.example .env.local && cd ../backend && cp .env.example .env",
      "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
      "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
      "typecheck": "tsc --noEmit",
      "docker:build": "docker-compose build",
      "docker:up": "docker-compose up -d",
      "docker:down": "docker-compose down"
    },
    "keywords": [
      "blockchain",
      "cryptocurrency",
      "municipal",
      "volunteering",
      "civic-engagement",
      "web3",
      "polygon",
      "smart-contracts"
    ],
    "author": "HelpToken Team",
    "license": "MIT",
    "devDependencies": {
      "@types/node": "^20.8.0",
      "@typescript-eslint/eslint-plugin": "^6.7.4",
      "@typescript-eslint/parser": "^6.7.4",
      "concurrently": "^8.2.1",
      "eslint": "^8.50.0",
      "prettier": "^3.0.3",
      "typescript": "^5.2.2"
    },
    "workspaces": [
      "frontend",
      "backend",
      "contracts",
      "shared"
    ]
  }
  
  